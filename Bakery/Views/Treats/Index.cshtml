@{
  Layout = "_Treats";
}


@using Bakery.Models;
@model List<Bakery.Models.Treat>;

<h1>Treats for @User.Identity.Name</h1>
<hr />
@if (@Model.Count == 0)
{
<h3>There are no Treats Listed</h3>
}

@foreach (Treat treat in Model)
{
  <li>@Html.ActionLink($"{treat.TreatName}", "Details", new { id = treat.TreatId })
  @using (Html.BeginForm("Delete", "Treats", FormMethod.Get))
  {
    @Html.Hidden("id", @treat.TreatId)
    <input type="submit" value="Remove Treat" class="btn btn-default"/>
  }</li>
  
}
<hr />
<p>@Html.ActionLink("Add a new Treat", "Create", "Treats")</p>
<p>@Html.ActionLink("Best Of Treats", "BestOf")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
<p>@Html.ActionLink("Search By Ingredient", "SearchBy")</p>
